@{
    ViewData["Title"] = "POST Method Demo";
}

<h2>POST Method Demonstration</h2>

<div class="alert alert-info">
    <p>This form will submit data using the HTTP POST method</p>
</div>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">
        @ViewBag.Error
    </div>
}

<div class="card border-primary mb-4">
    <div class="card-header bg-primary text-white">
        <h3 class="card-title">Sample Form</h3>
    </div>
    <div class="card-body">
        <form asp-controller="Home" asp-action="PostForm" method="post">
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" class="form-control" id="username" name="username" placeholder="Enter username">
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email address</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="Enter email">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

<p>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back to Demo Home</a>
</p>